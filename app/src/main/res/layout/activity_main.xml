<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="16dp"
    tools:context="com.example.oktay.kaynakemniyetkontrolu.MainActivity"
    android:textAlignment="center">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hesapla"
        android:id="@+id/button"
        android:onClick="onclick"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/edtsinir" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/edtkuvvet"
        android:numeric="integer|decimal"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kaynak Dikişinin Eni              "
        android:id="@+id/textView4"
        android:background="#123124"
        android:textColor="#ffff"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/textView8"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kuvvet Değeri                         "
        android:id="@+id/textView7"
        android:background="#123124"
        android:textColor="#ffff"
        android:layout_alignBottom="@+id/edtkuvvet"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kaynak Dikişinin Yüksekliği "
        android:id="@+id/textView8"
        android:background="#123124"
        android:textColor="#ffff"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/edtkesit"
        android:numeric="integer|decimal"
        android:textAlignment="center"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignEnd="@+id/edtkuvvet" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/edten"
        android:numeric="integer|decimal"
        android:textAlignment="center"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kaynak Dikişinin Boyu           "
        android:id="@+id/textView9"
        android:background="#123124"
        android:textColor="#ffff"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/edtboy"
        android:numeric="integer|decimal"
        android:textAlignment="center"
        android:layout_alignBottom="@+id/textView9"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/edtaci"
        android:numeric="integer|decimal"
        android:textAlignment="center"
        android:layout_below="@+id/edtboy"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="39dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Uygulanan Kuvvetin  Açısı    "
        android:id="@+id/textView10"
        android:background="#123124"
        android:textColor="#ffff"
        android:layout_alignTop="@+id/edtaci"
        android:layout_alignEnd="@+id/textView8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kaynak Gerilme Emniyet Sınırı"
        android:id="@+id/textView"
        android:background="#123124"
        android:textColor="#ffff"
        android:layout_below="@+id/edtaci"
        android:layout_alignEnd="@+id/textView8" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/edtsinir"
        android:layout_below="@+id/edtaci"
        android:layout_alignParentEnd="true"
        android:numeric="integer|decimal"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kuvvetin Kaynağa Uzaklığı "
        android:id="@+id/textView11"
        android:background="#123124"
        android:textColor="#ffff"
        android:layout_below="@+id/edtsinir"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/edtuzaklik"
        android:numeric="integer|decimal"
        android:textAlignment="center"
        android:layout_alignBottom="@+id/textView11"
        android:layout_toEndOf="@+id/button" />

</RelativeLayout>
